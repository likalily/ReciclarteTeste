<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appreciclarte.com.br.reciclarte">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/background"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="appreciclarte.com.br.reciclarte.SneakersActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="appreciclarte.com.br.reciclarte.SneakerDetailsActivity"
            android:parentActivityName="appreciclarte.com.br.reciclarte.SneakersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appreciclarte.com.br.reciclarte.SneakersActivity" />
        </activity>

        <activity
            android:name="appreciclarte.com.br.reciclarte.ThankYouActivity"
            android:label="@string/title_activity_thank_you"
            android:parentActivityName="appreciclarte.com.br.reciclarte.SneakersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appreciclarte.com.br.reciclarte.SneakersActivity" />
        </activity>
    </application>

</manifest>